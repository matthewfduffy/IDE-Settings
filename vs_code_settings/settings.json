    // Terminal Appearance
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",


    
    "workbench.colorCustomizations": {
        "terminal.background": "#383737",  // For Dark Mode
        "terminal.foreground":"#dddad6",
        "terminalCursor.foreground": "#ff4637",

        "statusBar.background": "#9a8d98",
        "statusBar.noFolderBackground": "#9a8d98",
        "statusBar.debuggingBackground": "#ff0000",

        "editor.selectionBackground": "#62964569",
        "editor.selectionHighlightBackground": "#ff00c862",

        "terminal.ansiBlack":"#1D2021",
        "terminal.ansiBrightBlack":"#665C54",
        "terminal.ansiBrightBlue":"#128ca5",
        "terminal.ansiBrightCyan":"#8BA59B",
